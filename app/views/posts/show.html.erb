<% content_for :page_title, @post.title %>
<section class="section">
	<div class="container">
		<nav class="level">
			<div class="level-left">
				<p class="level-item">
					<strong style="color: white;">Actions</strong>
				</p>
			</div>
			<div class="level-right">
				<p class="level-item">
					<%= link_to "Edit",edit_post_path(@post), class: "button" %>
				</p>
				<p class="level-item">
					<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-danger" %>
				</p>
			</div>
		</nav>
		<hr />
		<div class="content" style="background: rgba(204, 204, 204, 0.5);border-radius: 4px;padding: 3px;" >
			<%= @post.content %>
		</div>
	</div>
</section>
<section class="section comments">
	<div class="container">
		<h2 class="subtitle is -5" id="ad"><strong style="color: white;"><%= @post.comments.count %></strong> Comments</h2>
		<%= render @post.comments %>
		<div class="comment-form">
			<hr />
			<h3 class="subtitle is =3" id="ac">Leave a reply</h3>
			<%= render 'comments/form' %>
		</div>
	</div>


</section>